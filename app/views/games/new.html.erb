<h1>New Game</h1>

<div class="grid">
<% @grid.each do |letter| %>
<span class="letter-box"><%= letter %></span>
<% end %>
</div>

<p>What is the longest word you can find?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <%= hidden_field_tag :start_time, @start_time %>
  <input type="text" name="word"><button class="button">Play</button>
  <!-- <input type="submit" value="Submit Your Question!"> -->
</form>
